<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="IndicatorView">
        <attr name="indicatorColor" format="color"/>
        <attr name="indicatorColorSelected" format="color"/>
        <attr name="indicatorRadius" format="dimension"/>
        <attr name="indicatorRadiusSelected" format="dimension"/>
        <attr name="indicatorOffset" format="dimension"/>
        <attr name="indicatorCount" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ShapeImageView">
        <attr name="format" format="enum">
            <enum name="circle" value="0"/>
            <enum name="roundRect" value="1"/>
        </attr>
        <attr name="radius" format="dimension"/>
        <attr name="corners" format="dimension"/>
    </declare-styleable>


</resources>