<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorSecondPrimary"
    tools:showIn="@layout/activity_chat">

    <com.example.p2p.widget.customView.WrapViewPager
        android:id="@+id/vp_emoji"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <com.example.p2p.widget.customView.IndicatorView
        android:id="@+id/idv_emoji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        custom:indicatorColor="@color/colorIndicator"
        custom:indicatorColorSelected="@color/colorIndicatorSelected"
        custom:indicatorOffset="12dp"/>


</LinearLayout>